{% trans_default_domain 'FOSUserBundle' %}

<h3>{{'my_profile'|trans({}, 'messages')}}</h3>
<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <div>
        
        <a href="{{path('fos_user_profile_edit')}}" class="btn btn-primary">{{ 'form.edit.action'|trans({}, 'messages') }}</a>
        <a href="{{path('fos_user_change_password')}}" class="btn btn-danger">{{ 'change_password.submit'|trans }}</a>
    </div>
</div>
